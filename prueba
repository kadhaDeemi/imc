<body>
  <div class="container">
    <h1>Calculadora de IMC</h1>

    <form>
      <label for="peso">Peso (kg):</label>
      <input type="number" id="peso" min="0" max="500" step="0.1">

      <label for="altura">Altura (cm):</label>
      <input type="number" id="altura" min="0" max="300" step="0.1">

      <label for="sexo" style="width: 100px;">Sexo:</label>
      <select id="sexo">
        <option value="masculino">Masculino</option>
        <option value="femenino">Femenino</option>
      </select>

      <label for="edad">Edad:</label>
      <input type="number" id="edad" min="0" max="199" maxlength="3">

      <button type="button" onclick="calcularIMC()">Calcular</button>
    </form>

    <p id="resultado"></p>
    <p id="error" class="error"></p>

    <div id="sugerencias" class="sugerencias"></div>

    <div id="tipo-ejercicio">
      <label for="ejercicio">Tipo de ejercicio:</label>
      <select id="ejercicio">
        <option value="">Seleccione un tipo de ejercicio</option>
        <option value="cardio">Cardio</option>
        <option value="pesas">Pesas</option>
        <option value="yoga">Yoga</option>
      </select>
    </div>
  </div>

  <script>
    function calcularIMC() {
        var peso = document.getElementById("peso").value;
        var altura = document.getElementById("altura").value;
        var sexo = document.getElementById("sexo").value;
        var edad = document.getElementById("edad").value;

        var resultado = document.getElementById("resultado");
        var error = document.getElementById("error");
        var sugerencias = document.getElementById("sugerencias");
        var tipoEjercicio = document.getElementById("tipo-ejercicio");

        resultado.innerHTML = "";
        error.innerHTML = "";
        sugerencias.innerHTML = "";
        tipoEjercicio.style.display = "none";

        if (peso === "" || altura === "" || sexo === "" || edad === "") {
          error.innerHTML = "Por favor, completa todos los campos.";
          return;
        }

        var imc = peso / ((altura / 100) ** 2);
        var categoria;

        if (edad >= 18) {
          if (sexo === "masculino") {
            if (imc < 20) {
              categoria = "Bajo peso";
              resultado.classList.add("bajo-peso");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Consulta con un profesional de la salud para obtener una dieta adecuada.</li><li>Realiza ejercicios de fortalecimiento muscular.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="pesas">Pesas</option><option value="yoga">Yoga</option><option value="pilates">Pilates</option></select>';
            } else if (imc < 25) {
              categoria = "Peso normal";
              resultado.classList.add("peso-normal");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Mantén un estilo de vida activo y saludable.</li><li>Realiza ejercicio regularmente.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="cardio">Cardio</option><option value="yoga">Yoga</option></select>';
            } else if (imc < 30) {
              categoria = "Sobrepeso";
              resultado.classList.add("sobrepeso");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Reduce el consumo de alimentos ricos en grasas y azúcares.</li><li>Aumenta la actividad física.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="cardio">Cardio</option><option value="caminata">Caminata</option></select>';
            } else {
              categoria = "Obesidad";
              resultado.classList.add("obesidad");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Busca ayuda profesional para recibir orientación en la pérdida de peso.</li><li>Incorpora hábitos saludables en tu rutina diaria.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="pesas">Pesas</option><option value="aerobicos">Aeróbicos</option></select>';
            }
          } else if (sexo === "femenino") {
            if (imc < 19) {
              categoria = "Bajo peso";
              resultado.classList.add("bajo-peso");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Consulta con un profesional de la salud para obtener una dieta adecuada.</li><li>Realiza ejercicios de fortalecimiento muscular.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="pesas">Pesas</option><option value="yoga">Yoga</option><option value="pilates">Pilates</option></select>';
            } else if (imc < 24) {
              categoria = "Peso normal";
              resultado.classList.add("peso-normal");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Mantén un estilo de vida activo y saludable.</li><li>Realiza ejercicio regularmente.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="cardio">Cardio</option><option value="yoga">Yoga</option></select>';
            } else if (imc < 29) {
              categoria = "Sobrepeso";
              resultado.classList.add("sobrepeso");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Reduce el consumo de alimentos ricos en grasas y azúcares.</li><li>Aumenta la actividad física.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="cardio">Cardio</option><option value="caminata">Caminata</option></select>';
            } else {
              categoria = "Obesidad";
              resultado.classList.add("obesidad");
              sugerencias.innerHTML =
                "<h2>Sugerencias</h2><ul><li>Busca ayuda profesional para recibir orientación en la pérdida de peso.</li><li>Incorpora hábitos saludables en tu rutina diaria.</li></ul>";
              tipoEjercicio.style.display = "block";
              tipoEjercicio.innerHTML =
                '<label for="ejercicio">Tipo de ejercicio:</label><select id="ejercicio"><option value="">Seleccione un tipo de ejercicio</option><option value="pesas">Pesas</option><option value="aerobicos">Aeróbicos</option></select>';
            }
          }
        } else {
          error.innerHTML =
            "Lo sentimos, esta calculadora es solo para personas mayores de 18 años.";
          return;
        }

        resultado.innerHTML = "Tu IMC es: " + imc.toFixed(2) + " - " + categoria;
      
    }
  </script>
</body>

</html>
